[Unit]
Description=fcitx5 Voice Input Daemon (GPU Streaming)
Documentation=https://github.com/user/fcitx5-voice

[Service]
Type=dbus
BusName=org.fcitx.Fcitx5.Voice
ExecStart=%h/.local/bin/fcitx5-voice-daemon --url ws://localhost:9000 --language ja-JP
Restart=on-failure
RestartSec=5s

# Sandboxing
PrivateTmp=yes
ProtectSystem=strict
ProtectHome=read-only
NoNewPrivileges=yes

[Install]
WantedBy=default.target
